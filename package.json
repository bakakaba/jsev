{
  "name": "jsev",
  "version": "0.8.2",
  "description": "Environment for building Web API's.",
  "main": "lib/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "clean": "rm -rf node_modules && rm package-lock.json && rm -rf lib",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write src/**/*",
    "build": "tsc",
    "start": "tsc -w",
    "test": "jest --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && jest --coverage",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cruz82/jsev.git"
  },
  "keywords": [
    "environment",
    "utilites"
  ],
  "author": "https://github.com/cruz82",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cruz82/jsev/issues"
  },
  "homepage": "https://github.com/cruz82/jsev#readme",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "apollo-server-koa": "^2.6.1",
    "bunyan": "^1.8.12",
    "callsites": "^3.1.0",
    "chalk": "^2.4.2",
    "change-case": "^3.1.0",
    "graphql": "^14.3.1",
    "koa": "^2.7.0",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "shortid": "^2.2.14",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/chalk": "^2.2.0",
    "@types/graphql": "^14.2.0",
    "@types/jest": "^24.0.12",
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.40",
    "@types/koa__cors": "^2.2.3",
    "@types/lodash": "^4.14.133",
    "@types/node": "^12.0.5",
    "@types/shortid": "0.0.29",
    "@types/source-map-support": "^0.5.0",
    "app-module-path": "^2.2.0",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "prettier": {
    "arrowParens": "always",
    "trailingComma": "all"
  },
  "files": [
    "lib/**/*"
  ],
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*",
      "!**/*.test.*"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageDirectory": ".output/coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run prepublishOnly"
    }
  },
  "lint-staged": {
    "*.src/**/*": [
      "prettier --write",
      "git add"
    ]
  }
}
